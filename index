    <script>
        // --- VARIABLES Y CONFIGURACI√ìN ---
        let currentScale = 1; // Para hacer crecer el bot√≥n S√ç
        const yesButtons = document.querySelectorAll('.btn-yes');
        const bgMusic = document.getElementById('bg-music');
        
        // --- GENERADOR DE CORAZONES DE FONDO ---
        function createHearts() {
            const container = document.getElementById('bg-hearts');
            const heartCount = 20;
            for (let i = 0; i < heartCount; i++) {
                const heart = document.createElement('div');
                heart.classList.add('heart-bg');
                heart.style.left = Math.random() * 100 + 'vw';
                heart.style.animationDuration = Math.random() * 3 + 4 + 's';
                heart.style.animationDelay = Math.random() * 5 + 's';
                container.appendChild(heart);
            }
        }
        createHearts();

        // --- NAVEGACI√ìN ENTRE PANTALLAS ---
        function nextScreen(screenNumber) {
            // Ocultar todas las pantallas
            document.querySelectorAll('.screen').forEach(s => s.classList.remove('active'));
            // Mostrar la deseada
            document.getElementById('screen-' + screenNumber).classList.add('active');
            
            // Hacer crecer el bot√≥n S√ç en todas las pantallas
            growYesBtn();
            
            // Intentar reproducir m√∫sica si no ha empezado (interacci√≥n del usuario)
            playMusicSafe();
        }

        // --- RUTINA DE CUENTA REGRESIVA (PANTALLA 4) ---
        function startTimeoutRoutine() {
            nextScreen(4); // Mostrar pantalla de timer
            let timeLeft = 10;
            const timerElement = document.getElementById('timer');
            
            const countdown = setInterval(() => {
                timeLeft--;
                timerElement.innerText = timeLeft;
                if (timeLeft <= 0) {
                    clearInterval(countdown);
                    resetProposal();
                }
            }, 1000);
        }

        // --- RESETEAR AL INICIO ---
        function resetProposal() {
            currentScale = 1; // Resetear tama√±o del bot√≥n
            yesButtons.forEach(btn => btn.style.transform = `scale(1)`);
            nextScreen(1);
        }

        // --- FUNCIONES VISUALES (BOTONES) ---
        function growYesBtn() {
            currentScale += 0.2; // Crece un 20% cada vez
            yesButtons.forEach(btn => {
                btn.style.transform = `scale(${currentScale})`;
            });
        }

        function shakeBtn(btn) {
            // Peque√±a animaci√≥n de vibraci√≥n al pasar el mouse por NO
            btn.style.transform = "translateX(" + (Math.random() * 10 - 5) + "px)";
            setTimeout(() => {
                btn.style.transform = "translateX(0)";
            }, 200);
        }

        // --- PANTALLA DE √âXITO ---
        function goSuccess() {
            playMusicSafe();
            document.querySelectorAll('.screen').forEach(s => s.classList.remove('active'));
            document.getElementById('screen-5').classList.add('active');
            startConfetti();
        }

        // --- M√öSICA ---
        function toggleMusic() {
            if (bgMusic.paused) {
                bgMusic.play();
            } else {
                bgMusic.pause();
            }
        }
        
        function playMusicSafe() {
            // Los navegadores bloquean autoplay hasta que el usuario interact√∫a
            bgMusic.play().catch(error => {
                console.log("Esperando interacci√≥n para reproducir m√∫sica");
            });
        }

        // --- EFECTO CONFETI (CANVAS SIMPLE) ---
        function startConfetti() {
            const canvas = document.getElementById('confetti-canvas');
            const ctx = canvas.getContext('2d');
            canvas.width = window.innerWidth;
            canvas.height = window.innerHeight;

            const pieces = [];
            const colors = ['#ff4d6d', '#ff8fa3', '#ffffff', '#ffd700'];

            for (let i = 0; i < 300; i++) {
                pieces.push({
                    x: Math.random() * canvas.width,
                    y: Math.random() * canvas.height - canvas.height,
                    color: colors[Math.floor(Math.random() * colors.length)],
                    size: Math.random() * 10 + 5,
                    speed: Math.random() * 5 + 2,
                    angle: Math.random() * 360
                });
            }

            function draw() {
                ctx.clearRect(0, 0, canvas.width, canvas.height);
                pieces.forEach(p => {
                    ctx.fillStyle = p.color;
                    ctx.beginPath();
                    ctx.arc(p.x, p.y, p.size, 0, Math.PI * 2);
                    ctx.fill();
                    p.y += p.speed;
                    p.x += Math.sin(p.angle) * 2;
                    if (p.y > canvas.height) p.y = -10;
                });
                requestAnimationFrame(draw);
            }
            draw();
        }

        // Ajustar canvas al cambiar tama√±o de ventana
        window.addEventListener('resize', () => {
            const canvas = document.getElementById('confetti-canvas');
            canvas.width = window.innerWidth;
            canvas.height = window.innerHeight;
        });
    </script>
</body>
